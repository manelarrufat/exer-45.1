/**
 * Implements hook_schema_alter().
 */
function db_forcontu_schema_alter(&$schema) {
  // Add field to existing schema.
  $schema['node']['fields']['new_field'] = array(
    'type' => 'int',
    'unsigned' => TRUE,
    'not null' => TRUE,
    'default' => 1,
